<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_imng_2"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_overlay" />


    <ImageView
        android:layout_width="391dp"
        android:layout_height="126dp"
        android:src="@drawable/app_title"
        app:layout_constraintBottom_toTopOf="@+id/chores_list_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="1.0">

    </ImageView>

    <Button
        android:id="@+id/chores_list_button"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/all_chores_title"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/chores_add_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:backgroundTint="#0099FF"/>

    <Button
        android:id="@+id/chores_add_button"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/add_chore_title"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/family_members_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chores_list_button"
        android:backgroundTint="#0099FF"/>

    <Button
        android:id="@+id/family_members_button"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="@string/family_title"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chores_add_button"
        android:backgroundTint="#0099FF"/>

</androidx.constraintlayout.widget.ConstraintLayout>
